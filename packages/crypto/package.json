{
  "name": "@signauth/crypto",
  "version": "0.0.3",
  "description": "The SignAuth crypto library.",
  "license": "MIT",
  "scripts": {
    "lint": "eslint -c .eslintrc 'src/**/*.js' 'test/**/*.js'",
    "all-tests": "find test/** -name '*.test.js' | xargs ./node_modules/.bin/mocha -R spec",
    "test-only": "cross-env NODE_ENV=test ./node_modules/.bin/mocha test/*.test.js test/**/*.test.js --exit",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test/*.test.js test/**/*.test.js --exit",
    "posttest": "nyc check-coverage --statements 100 --branches 80 --functions 100 --lines 100"
  },
  "dependencies": {
    "base-x": "^3.0.8",
    "sha3": "^2.1.2",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-node": "^11.0.0",
    "mocha": "^7.1.2",
    "nyc": "^15.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signauth/signauth.git"
  },
  "author": {
    "name": "Francesco Sullo",
    "email": "francesco@sullo.co"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
